// onOpen関数でタブに紐づく関数を実行するトリガーを設定
function onOpen() {
  var spreadsheet = SpreadsheetApp.getActiveSpreadsheet();
  
  // カスタムメニューを設定
  spreadsheet.addMenu("★NIKKE管理設定", [
    {
      name: "設定を開く",
      functionName: "openPreferences"
    },
    {
      name: "オプション一括更新",
      functionName: "checkAndStartBatchApplyDropdown"
    }
  ]);
}